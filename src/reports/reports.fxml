<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="reportsLabel" text="reports">
         <font>
            <Font size="18.0" />
         </font></Label>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <ChoiceBox fx:id="reportChoiceBox" />
            <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshClick" text="refresh" />
         </children>
      </HBox>
      <TextArea fx:id="reportArea" editable="false" prefHeight="400.0" prefWidth="600.0">
         <font>
            <Font name="Courier New" size="12.0" />
         </font></TextArea>
   </children>
</VBox>
